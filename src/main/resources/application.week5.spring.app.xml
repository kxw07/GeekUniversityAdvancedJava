<!--            <aop:around method="around" pointcut-ref="p2"/>-->
<!--            <aop:before method="before" pointcut-ref="p2"/>-->
<!--            <aop:after-returning method="after" pointcut-ref="p2"/>-->
<!--        </aop:aspect>-->
<!--    </aop:config>-->
</beans>